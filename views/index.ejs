<%- include('./port/layout-start', {title: title}) %>
<%- include('./port/menu') %>

<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-4"><%= title %></h1>
    </div>
</div>

<% if (!user) { %>
    <p>Главная</p> 
    <p>
        Пожалуйста, <a href="/api/user/login"> авторизуйтесь </a>
        или <a href="/api/user/signup"> зарегистрируйтесь </a>
    </p>
<% } else { %>
    <p>Привет, <%= user.username %>. </p>
    <p>Перейти в <a href="/api/user/me">профиль</a>.</p>
    <%- include('./books/books') %>
<% } %>

<%- include('./port/layout-end') %>